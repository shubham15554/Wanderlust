
 <% if(success && success.length > 0){ %>
   <div class="alert alert-success mt-3 alert-dismissible fade show col-8 offset-2" role="alert" style="text-align: center;">
    <%=success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
 <% } %>


 
 <% if(error && error.length > 0){ %>
   <div class="alert alert-danger mt-3 alert-dismissible fade show col-8 offset-2" role="alert" style="text-align: center;">
    <%=error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
 <% } %>